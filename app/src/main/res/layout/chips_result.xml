<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1c1c1c">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:background="#FF4081">
                <TextView
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Chips result "
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="left"
                    android:id="@+id/result" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Quality Ratio"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">


                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textAppearance="?android:attr/textAppearanceLarge"

                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="1"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/ratio_a"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=":"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_gravity="center" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="2"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/ratio_b" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textAppearance="?android:attr/textAppearanceLarge"

                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </LinearLayout>

            </LinearLayout>
            <TableLayout
                android:layout_marginLeft="5sp"
                android:layout_marginRight="4sp"
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:stretchColumns="3">
                <TableRow
                    android:background="#1c1c1c"

                    >
                    <TextView

                        android:gravity="center"
                        android:textStyle="bold"

                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="52sp"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:text="Type" />

                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#fff"

                        android:layout_weight=".9"
                        android:layout_width="0dp"
                        android:layout_height="32sp"

                        android:textSize="22sp"
                        android:text="Quantity" />

                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="32sp"
                        android:textSize="22sp"
                        android:textColor="#fff"
                        android:text="Price" />
                </TableRow>
                <TableRow
                    android:background="#1c1c1c"

                    >
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="50sp"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="Cement  bags" />

                    <TextView
                        android:background="@drawable/ediittext_field"

                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp"
                        android:gravity="center"


                        android:layout_weight=".9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textSize="15sp"
                        android:text="Quantity"
                        android:id="@+id/cement_bag_quantity"/>

                    <TextView
                        android:background="@drawable/ediittext_field"

                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:paddingLeft="10sp"
                        android:gravity="center"

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textSize="15sp"
                        android:text="Price"
                        android:id="@+id/cement_bag_price"/>

                    <TextView
                        android:layout_weight=".03"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>


                <TableRow
                    android:background="#1c1c1c"

                    >

                    <TextView

                        android:gravity="left"

                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="50sp"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="Sand(fine aggregate)" />

                    <TextView
                        android:background="@drawable/ediittext_field"

                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"

                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp"
                        android:gravity="center"


                        android:layout_weight=".9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textSize="15sp"
                        android:text="Quantity"
                        android:id="@+id/sand_quantity"/>

                    <TextView
                        android:background="@drawable/ediittext_field"

                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"

                        android:paddingLeft="10sp"
                        android:gravity="center"

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textSize="15sp"
                        android:text="Price"
                        android:id="@+id/sand_price" />

                    <TextView
                        android:layout_weight=".03"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:background="#1c1c1c"
                    >
                    <TextView />
                </TableRow>

            </TableLayout>

        </LinearLayout>
        <LinearLayout
            android:background="#1c1c1c"
            android:layout_width="match_parent"
            android:layout_height="122sp"
            android:orientation="vertical"
            >
            <LinearLayout

                android:layout_marginLeft="5sp"
                android:layout_marginRight="4sp"
                android:background="#1c1c1c"
                android:layout_width="match_parent"
                android:layout_height="122sp"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50sp">


                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="left"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:text="No.of Sakaras of chips" />
                    <TextView

                        android:background="@drawable/ediittext_field"
                        android:layout_marginLeft="10sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="number "
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/sakra_number"
                        android:layout_weight="1" />
                    <TextView

                        android:background="@drawable/ediittext_field"

                        android:layout_marginLeft="10sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="price "
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/sakra_price"
                        android:layout_weight="1" />
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5sp"
            android:layout_marginRight="4sp"
            android:background="#1c1c1c"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <Button
                    android:background="@drawable/save_btn"
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Save \n Result"
                    android:id="@+id/save" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <Button
                    android:background="@drawable/save_btn"
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Back to Home"
                    android:id="@+id/back" />


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>