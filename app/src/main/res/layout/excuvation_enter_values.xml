<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1c1c1c">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_banner">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <EditText
            android:background="@drawable/ediittext_field"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="Enter Length"
            android:ems="10"
            android:id="@+id/exe_length"
            android:layout_weight="3" />

        <TextView
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:layout_width="60dp"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:text="feet"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:background="@drawable/ediittext_field"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="Enter Width"
            android:id="@+id/exe_width"
            android:ems="10"
            android:layout_weight="3" />

        <TextView
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:layout_width="60dp"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:text="feet"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:background="@drawable/ediittext_field"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="Enter Height"
            android:id="@+id/exe_height"
            android:ems="10"
            android:layout_weight="3" />

        <TextView
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:layout_width="60dp"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:text="feet"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#fff"
        android:text="Calculate it for"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"/>

    <LinearLayout
        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/your_color"
            android:text="No. of days"
            android:textColor="#fff"
            android:id="@+id/exe_radio_a" />
        <RadioButton
            android:id="@+id/exe_radio_b"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/your_color"
            android:textColor="#fff"
            android:text="No. of labour / machine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            android:text="Next" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="#727272" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/next" />

    </LinearLayout>

</LinearLayout>
