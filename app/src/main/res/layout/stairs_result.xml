                    android:id="@+id/save" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <Button
                    android:background="@drawable/save_btn"
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
