                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #7"
                        android:id="@+id/main_bar_g" />


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #8"
                        android:id="@+id/main_bar_h" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">


                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"

                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="bar Length" />


                    <EditText
                        android:background="@drawable/ediittext_field"

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="feet"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/main_bar_length"
                        />
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">


                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"

                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="number of bars" />


                    <EditText
                        android:background="@drawable/ediittext_field"

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="No's of log bar"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/main_bar_numbers"
                        />
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60sp">


            <Button
                android:layout_margin="2sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:text="Calculate Results"
                android:id="@+id/calculate"
                android:background="@drawable/configuration_save_selector"/>
        </LinearLayout>
    </LinearLayout>
