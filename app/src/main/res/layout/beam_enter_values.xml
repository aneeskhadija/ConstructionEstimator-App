<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:overScrollMode="always"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1c1c1c">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="#FF4081">
            <TextView
                android:layout_marginLeft="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Enter values"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="left"
                android:id="@+id/beam_for" />
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="165sp"
            android:orientation="vertical">
            <LinearLayout
                android:background="#1c1c1c"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="4sp"
                android:layout_width="match_parent"
                android:layout_height="165sp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"
                        android:textColor="#fff"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textSize="15sp"
                        android:text="Length"
                        />

                    <EditText
                        android:background="@drawable/ediittext_field"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="feet"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/rcc_length"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_weight=".1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="Width" />

                    <EditText
                        android:background="@drawable/ediittext_field"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="feet"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/rcc_width"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_weight=".1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">


                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="Height" />
                    <EditText
                        android:background="@drawable/ediittext_field"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="feet"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/rcc_height"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_weight=".1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="5sp"
                android:layout_marginRight="4sp"
                android:background="#1c1c1c"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_marginTop="4sp"
                        android:layout_marginRight="4sp"
                        android:layout_width="0dp"
                        android:layout_height="35sp"
                        android:orientation="vertical"
                        android:background="#1c1c1c">

                        <TextView

                            android:paddingLeft="10sp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:text="Tie bar/Stirrups" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_weight="2.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:background="#1c1c1c"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                        <LinearLayout
                            android:layout_marginBottom="4sp"
                            android:background="#1c1c1c"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textSize="20sp"
                        android:text=" #1"
                        android:textColor="#fff"
                        android:id="@+id/tiebar_a" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #2"
                        android:id="@+id/tiebar_b" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #3"
                        android:id="@+id/tiebar_c" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #4"
                        android:id="@+id/tiebar_d" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"
                        android:textColor="#fff"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:textSize="15sp"
                        android:text="Running feet" />


                    <EditText
                        android:background="@drawable/ediittext_field"

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="in foot"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/tiebar_running_feet"
                        />
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:orientation="vertical">


            <LinearLayout

                android:layout_marginLeft="5sp"
                android:layout_marginRight="4sp"
                android:background="#1c1c1c"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_weight="4.5"
                        android:layout_marginTop="4sp"
                        android:layout_marginRight="4sp"
                        android:layout_width="0dp"
                        android:layout_height="35sp"
                        android:orientation="vertical"
                        android:background="#1c1c1c">
                        <TextView
                            android:paddingLeft="10sp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:text="Longitudinal/Main bar" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_weight="2.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:background="#1c1c1c"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                        <LinearLayout
                            android:layout_marginBottom="4sp"
                            android:background="#1c1c1c"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #1"
                        android:id="@+id/main_bar_a" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #2"
                        android:id="@+id/main_bar_b" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:text=" #3"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:id="@+id/main_bar_c" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #4"
                        android:id="@+id/main_bar_d" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #5"
                        android:id="@+id/main_bar_e" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #6"
                        android:id="@+id/main_bar_f" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:text=" #7"
                        android:id="@+id/main_bar_g" />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:text=" #8"
                        android:id="@+id/main_bar_h" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">


                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"
                        android:textColor="#fff"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:text="bar Length" />
                    <EditText
                        android:background="@drawable/ediittext_field"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="feet"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/main_bar_length"
                        />
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="Number of bars" />
                    <EditText
                        android:background="@drawable/ediittext_field"

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="No's of bar"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/main_bar_numbers"
                        />
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60sp">
            <Button
                android:layout_margin="2sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:text="Calculate Results"
                android:id="@+id/calculate"
                android:background="@drawable/configuration_save_selector"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>