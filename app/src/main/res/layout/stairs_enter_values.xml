                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/your_color"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:text=" #3"
                        android:id="@+id/tiebar_c" />


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
