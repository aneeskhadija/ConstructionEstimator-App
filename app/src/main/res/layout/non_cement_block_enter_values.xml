<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1c1c1c">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_banner">
    </com.google.android.gms.ads.AdView>
    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/frame">

        <EditText
            android:id="@+id/s_b_length"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/ediittext_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Length"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="8sp"
            android:paddingTop="8sp"
            android:text="cubic feet"
            android:textColor="#fff"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame">

        <EditText
            android:id="@+id/s_b_width"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/ediittext_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter width"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="8sp"
            android:paddingTop="8sp"
            android:text="cubic feet"
            android:textColor="#fff"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/s_b_height"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/ediittext_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Height"
            android:inputType="numberDecimal" />

        <TextView
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:layout_width="60dp"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:text="cubic feet"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/s_b_percentage"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/ediittext_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter brick area"
            android:inputType="numberDecimal" />

        <TextView
            android:paddingTop="8sp"
            android:paddingLeft="8sp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:layout_width="60dp"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:text=" %"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:text="Next"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="#727272" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/next" />

    </LinearLayout>

</LinearLayout>
