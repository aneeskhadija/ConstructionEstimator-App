<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1c1c1c">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_banner">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:paddingLeft="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/your_color"
            android:text="Rough Plaster   0.5''"
            android:textColor="#fff" />
        <RadioButton
            android:text="Soft Plaster    1''"
            android:id="@+id/radioButton2"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/your_color"
            android:textColor="#fff"/>

        <LinearLayout
            android:paddingTop="9dp"
            android:paddingBottom="11dp"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RadioButton
                android:textSize="19dp"
                android:paddingLeft="10dp"
                android:layout_weight=".4"
                android:buttonTint="@color/your_color"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:id="@+id/radio_custom"/>


            <EditText
                android:id="@+id/s_b_height"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/ediittext_field"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter Height"
                android:inputType="numberDecimal" />


            <TextView
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="inches"
                android:id="@+id/textView6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:layout_gravity="center">

            <EditText
                android:background="@drawable/ediittext_field"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="numberDecimal"
                android:hint="Enter Length"
                android:ems="10"
                android:id="@+id/s_b_length"
                android:layout_weight="3" />

            <TextView
                android:paddingTop="8sp"
                android:paddingLeft="8sp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:layout_width="60dp"
                android:textColor="#fff"
                android:layout_height="match_parent"
                android:text="feet"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:layout_gravity="center">

            <EditText
                android:background="@drawable/ediittext_field"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:hint="Enter Width"
                android:id="@+id/s_b_width"
                android:layout_weight="3" />

            <TextView
                android:paddingTop="8sp"
                android:paddingLeft="8sp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:layout_width="60dp"
                android:textColor="#fff"
                android:layout_height="match_parent"
                android:text="feet"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:ems="10"
                android:textSize="18sp"
                android:textColor="#fff"
                android:background="@android:color/transparent"
                android:text="Next" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="#727272" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="58dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/next" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
