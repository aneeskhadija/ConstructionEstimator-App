<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:background="#1c1c1c"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="#FF4081">

        <TextView
            android:layout_marginLeft="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Marble Result "
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="32sp"
            android:gravity="left"
            android:id="@+id/result" />

    </LinearLayout>
    <LinearLayout
        android:background="#1c1c1c"
        android:layout_width="match_parent"
        android:layout_height="330sp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:background="#1c1c1c"
            android:layout_width="match_parent"
            android:layout_height="330sp"
            android:orientation="vertical">

            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp">


                <TextView
                    android:paddingLeft="20sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:textColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:text="Total marbles" />
                <TextView
                    android:background="@drawable/ediittext_field"
                    android:layout_marginLeft="10sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="number "
                    android:textColor="#fff"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/no_of_marbles"
                    android:layout_weight="1.5" />
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55sp">
                <TextView
                    android:paddingLeft="20sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:text="Overall length of area" />
                <TextView
                    android:background="@drawable/ediittext_field"
                    android:layout_marginLeft="10sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:hint="length "
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/length"
                    android:layout_weight="1.5" />
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55sp">
                <TextView
                    android:paddingLeft="20sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:textColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:text="Overall width of area" />
                <TextView
                    android:background="@drawable/ediittext_field"
                    android:layout_marginLeft="10sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="width "
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/width"
                    android:layout_weight="1.5" />
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="55sp">
                <TextView
                    android:paddingLeft="20sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:text="Overall height of area" />
                <TextView
                    android:background="@drawable/ediittext_field"
                    android:layout_marginLeft="10sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="height "
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/height"
                    android:layout_weight="1.5" />
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp">


                <TextView
                    android:paddingLeft="20sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:text="Total cost" />
                <TextView
                    android:background="@drawable/ediittext_field"
                    android:layout_marginLeft="10sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="number "
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/price"
                    android:layout_weight="1.5" />
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5sp"
        android:layout_marginRight="4sp"
        android:background="#1c1c1c"
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:background="@drawable/save_btn"
                android:layout_weight="1.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Save \n Result"
                android:id="@+id/save" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <Button
                android:background="@drawable/save_btn"
                android:layout_weight="1.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Back to Home"
                android:id="@+id/back" />


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>
    </LinearLayout>
    </LinearLayout>
