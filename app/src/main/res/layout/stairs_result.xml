                        android:gravity="center"
                        android:layout_weight="1.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="Length" />
